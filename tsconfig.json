{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "esnext",
    "module": "esnext",
    "types": ["vite/client"],
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*",
        "./backend/*",
        "./server.ts"
      ],
    }
  },
  "include": [
    "src", 
    "vite.config.ts", 
    "server.ts", 
    "backend/**/*"
  ]
}
