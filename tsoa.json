{
  "entryFile": "server.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["backend/controllers/*.ts"],
  "spec": {
    "outputDirectory": "backend/docs",
    "specVersion": 3
  },
  "routes": {
    "routesDir": "backend/generated",
    "authenticationModule": "./backend/middlewares/auth"
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["backend/*"]
    }
  }
}